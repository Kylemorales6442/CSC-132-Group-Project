class Player(object):
    def __init__(self, x, y):
        self.x = x
        self.y = y

    #getters and stters for x and y
    @property
    def x(self):
        return self._x

    @x.setter
    def x(self, value):
        self._x = value

    @property
    def y(self):
        return self._y

    @y.setter
    def y(self, value):
        self._y = value
    

    def moveUp(self):
        global board
        global s
        print board[self.y][self.x]
        if(board[self.y-1][self.x] == 1):
            print "can move up"
            board[self.y-1][self.x] = 2
            board[self.y][self.x] = 1
            self.y = self.y - 1
            #regenerate map
            s.createMap()
        #check if the spot has a letter on it
        elif(board[self.y-2][self.x-1] > 2):
            print "letter found"
            mazeGame.setStatus(board[self.y][self.x])
            board[self.y-2][self.x-1] = 2
            board[self.y-1][self.x-1] = 1
            #regenerate map
            mazeGame.createMap()

    def moveDown(self):
        global board
        global s
        print board[self.y+1][self.x]
        if(board[self.y+1][self.x] == 1):
            board[self.y+1][self.x] = 2
            board[self.y][self.x] = 1
            self.y= self.y +1
            #regenerate map
            s.createMap()
        #check if the spot has a letter on it
        elif(board[self.y][self.x-1] > 2):
            mazeGame.setStatus(currentBoard[self.y][self.x])
            currentBoard[self.y-1][self.x] = 2
            currentBoard[self.y][self.x] = 1
            #regenerate map
            mazeGame.createMap(currentBoard)

    def moveLeft(self):
        global board
        global s
        if(board[self.y][self.x-1] == 1):
            board[self.y][self.x-1] = 2
            board[self.y][self.x] = 1
            #regenerate map
            self.x = self.x - 1
            s.createMap()
        #check if the spot has a letter on it
        elif(board[self.y-1][self.x] > 2):
            mazeGame.setStatus(currentBoard[self.y][self.x])
            currentBoard[self.y-1][self.x] = 2
            currentBoard[self.y][self.x] = 1
            #regenerate map
            mazeGame.createMap(currentBoard)

    def moveRight(self):
        global board
        global s
        if(board[self.y][self.x+1] == 1):
            board[self.y][self.x+1] = 2
            board[self.y][self.x] = 1
            self.x = self.x +1
            #regenerate map
            s.createMap()
        #check if the spot has a letter on it
        elif(board[self.y-1][self.x] > 2):
            mazeGame.setStatus(currentBoard[self.y][self.x])
            currentBoard[self.y-1][self.x] = 2
            currentBoard[self.y][self.x] = 1
            #regenerate map
            mazeGame.createMap(currentBoard)
            
class MazeGame(Canvas):
    def __init__(self, master):
        Canvas.__init__(self, master)
        self.pack(fill = BOTH, expand=1)

    def hideLetters(self):
        global p
        global chosenWord
        global board
        chosenWord = words[randint(0, 4)]
        finalWord = chosenWord
        print chosenWord
        print chosenWord[0]
        counter = len(chosenWord) + 2
        print counter
        while(len(chosenWord) > 0):
            r = randint(1,36)
            c = randint(1, 58)
            if(board[r][c] == 1):
                board[r][c] = counter
                del chosenWord[0]
                print chosenWord
                counter -= 1

        p = Player(6, 36)
        s.createMap()
        s.setupGUI()
        #s.setStatus("q")
        


    def createMap(self):
        global board
        for row in range(len(board)):
            height = row*10
            for col in range(len(board[0])):
                width = col*10
                if(board[row][col] == 0):
                    #create rectangle (x0, y0, x1, y1, fill, outline)
                    self.create_rectangle(width, height, width+10, height+10, fill="black")
                elif(board[row][col] == 1):
                    self.create_rectangle(width, height, width+10, height+10, fill="white") #outline="white")
                elif(board[row][col] == 2):
                    self.create_rectangle(width, height, width+10, height+10, fill="red")
                elif(board[row][col] > 2):
                    self.create_rectangle(width, height, width+10, height+10, fill="blue")

    
    def setupGUI(self):
        #setup the player input at bottom.
        s.player_input = Entry(self, bg="white")
        #s.player_input.bind("<Return>", self.process)
        s.player_input.pack(side=BOTTOM, fill=X)

        #Set up text on the right of GUI
        text_frame = Frame(self, width=TEXTWIDTH)
        MazeGame.text = Text(text_frame, bg="lightgrey", state=DISABLED)
        MazeGame.text.pack(fill=Y, expand=1)
        text_frame.pack(side=RIGHT, fill=Y)
        text_frame.pack_propagate(False)

    # sets the status displayed on the right of the GUI
    def setStatus(self, letter):
        #enable text widget
        MazeGame.text.config(state=NORMAL)
        MazeGame.text.delete("1.0", END)
        MazeGame.text.insert(END, "Please type in you teams constellation.")
        MazeGame.text.config(state=DISABLED)
        if(False):
            MazeGame.text.config(state=NORMAL)
            MazeGame.text.insert(END, "Keep searching for letters! This is what you've found.")
            MazeGame.text.insert(END, lettersFound)
            MazeGame.text.config(state=DISABLED)

def wait_for_button_press():
    while(True):
        if (GPIO.input(up)):
            #debounce switch
            while(GPIO.input(up)):
                sleep(0.01)
            return "up"

        if (GPIO.input(down)):
            #debounce switch
            while(GPIO.input(down)):
                sleep(0.01)
            return "down"

        if (GPIO.input(left)):
            #debounce switch
            while(GPIO.input(left)):
                sleep(0.01)
            return "left"

        if (GPIO.input(right)):
            #debounce switch
            while(GPIO.input(right)):
                sleep(0.01)
            return "right"

        sleep(0.01)

