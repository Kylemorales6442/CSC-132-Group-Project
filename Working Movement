words = [["s", "p", "a", "c", "e", "s", "h", "i", "p"], ["m", "o", "o", "n"], ["j", "u", "p", "i", "t", "o", "r"], ["n", "e", "p", "t", "u", "n", "e"], ["v", "e", "n", "u", "s"]]
