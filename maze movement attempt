#create the window
window = Tk()
window.geometry("{}x{}".format(WIDTH, HEIGHT))
window.title("Maze Game")

s = MazeGame(window)

s.createMap(gameMap)
while(True):
    movement(board, row, col)
    print possible_moves
    s.createMap(gameMap)

